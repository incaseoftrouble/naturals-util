<FindBugsFilter>
  <!-- Tests and benchmarks often use @SetUp or similar to initialize their values -->
  <Match>
    <Folder name="~test\..*"/>
    <Or>
      <Class name="~.*Test$"/>
      <Class name="~.*Benchmark$"/>
      <!-- Include inner classes -->
      <Class name="~.*Test\$.*"/>
      <Class name="~.*Benchmark\$.*"/>
    </Or>
    <Or>
      <Bug code="UwF"/>
      <Bug pattern="NP_NONNULL_FIELD_NOT_INITIALIZED_IN_CONSTRUCTOR"/>
    </Or>
  </Match>

  <!-- exclude JMH generated code from analysis -->
  <Match>
    <Package name="~de\.tum\.in\.naturals\..*\.generated"/>
  </Match>
</FindBugsFilter>
